---
import Bubbles from "../components/Bubbles";
import Fish from "../components/Fish";
import IntroText from "./IntroText";
import When from "../components/When";
import Shark from "./Shark";
---

<section
  class="flex items-center justify-evenly intro bg-[#093C75] h-screen overflow-hidden relative bg-[url('/main_bg.png')] bg-cover bg-no-repeat bg-center overflow-x-hidden"
>
  <div class="fixed inset-0">
    <Bubbles client:load />
  </div>
  <div class="fixed inset-0">
    <Fish client:load />
  </div>
  <div class="fixed inset-0">
    <Shark client:load />
  </div>
  <IntroText client:load />
</section>
<section
  class="justify-evenly intro bg-gradient-to-b from-[#093C75] to-[#ffffff] h-screen overflow-hidden relative"
>
<When client:load />
</section>
